<%= 'Atenção! Existe outro pedido marcado para o mesmo dia que este.' if Order.find_by 'date = ? AND id != ?', @order.date, @order.id %>
<%= render partial: 'order_details', locals: { order: @order } %>
<nav class="d-flex justify-content-center gap-2 m-5 fs-5">
  <%= link_to 'Aprovar Pedido', edit_order_path, class: "btn btn-primary" if @order.waiting_for_evaluation? %>
  <%= button_to 'Cancelar Pedido', order_path, method: :patch, params: { operation: 'cancel' }, class: "btn btn-danger" unless @order.canceled? || @order.confirmed? %>
</nav>
