<%= form_with model: base_price, class: "mx-5 fs-5" do |form| %>
  <div class="my-3">
    <%= form.label :description %>
    <div>
      <%= form.text_field :description, class: "large-input-width" %>
    </div>
  </div>

  <div class="my-3">
    <%= form.label :minimum %>
    <div>
      <%= form.number_field :minimum, min: 0, step: 0.01 %>
    </div>
  </div>

  <div class="my-3">
    <%= form.label :additional_per_person %>
    <div>
      <%= form.number_field :additional_per_person, min: 0, step: 0.01 %>
    </div>
  </div>

  <div class="my-3">
    <%= form.label :extra_hour_value %>
    <div>
      <%= form.number_field :extra_hour_value, min: 0, step: 0.01 %>
    </div>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary my-3" %>
  </div>
<% end %>